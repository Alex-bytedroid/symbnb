{% extends 'base.html.twig' %}

{% block title %}Nos Magnifiques annonces{% endblock %}

{% block body %}
    <div class="container">

        <h2 class="h1 mt-5 mb-4">Voici les annonces de nos hôtes</h2>

            <div class="row mt-5">
                {% for ad in ads %}
                    {% set url = path('ads_show', {'slug': ad.slug}) %}

                    <div class="col-md-4">
                    <div class="card bg-light mb3">
                        <div class="card-header text-center">
                            {{ ad.rooms}} chambres, <b>{{ ad.price}}&euro; / nuit</b> <br>
                            <small>Pas encore noté</small>
                        </div>
                        <a href="{{ url }}">
                            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 200px; width: 100%; display: block">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ url }}">
                                    {{ ad.title }}
                                </a>
                            </h4>
                            <p class="card-text">
                                {{ ad.introduction }}
                            </p>
                            <a href="{{ url }}" class="btn btn-primary">En savoir plus</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
